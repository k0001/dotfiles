Config { -- font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
         font = "xft:Envy Code R:pixelsize=13"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run MultiCpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Memory ["-t","<usedratio>%"] 30
                    , Run Swap ["-t", "<usedratio>%" ] 10
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run BatteryP ["BAT0"]
                                   ["-t", "Bat:<left>% <timeleft> <acstatus><watts>",
                                    "-L", "10", "-H", "80", "-p", "3",
                                    "--", "-O", "<fc=green>On</fc> - ", "-o", "",
                                    "-L", "-15", "-H", "-5",
                                    "-l", "red", "-m", "blue", "-h", "green"] 50
                    , Run CoreTemp ["-t", "Temp: <core0>|<core1>",
                                    "-L", "40", "-H", "65",
                                    "-l", "lightblue", "-n", "gray90", "-h", "red"] 50
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %battery% · %coretemp% · %multicpu% · MemSwap: %memory%|%swap% · %wlan0% · <fc=#ee9a00>%date%</fc>"
       }

